<?xml version="1.0" encoding="UTF-8"?>
<profilesXml xmlns="http://maven.apache.org/PROFILES/1.0.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://maven.apache.org/PROFILES/1.0.0 http://maven.apache.org/xsd/profiles-1.0.0.xsd">
    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <executions>
                    <execution>
                        <phase>test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <echo>Copy Using env.test.properties</echo>
                                <copy file="src/main/resources/env.test.properties"
                                      tofile="${project.build.outputDirectory}/envTESTE.properties"/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
            </properties>
        </profile>
    </profiles>
</profilesXml>